                    <img src="{{this.image}}" class="card-img-top  mt-3" alt="">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="text-success">â‚¹{{this.price}}<span id="price"></span></p>
                        <p class="card-text">{{this.discription}}</p>
                        {{#if ../user}}
                        <buttion class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to Cart</buttion>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>