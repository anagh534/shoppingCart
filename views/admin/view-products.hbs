<section>
  <div class="container" style="overflow-y: auto;">
    <div class="row mt-4">
      <a href="/admin/add-product" class="btn btn-success ml-auto mb-3">Add Product</a>
    </div>
    <table class="table mt-5 hover row-border" id="product-table">
      <thead>
        <tr>
          <th scope="col">Product</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th>Price</th>
          <th>Image</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.category}}</td>
          <td>{{this.discription}}</td>
          <td>{{this.price}}</td>
          <td><img style="width: 80px; height: 70px;" src="{{this.image}}"></td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.name}}?')"\>Delete</a>
            </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
<script>
  $(document).ready( function () {
    $('#product-table').DataTable();
} );
</script>