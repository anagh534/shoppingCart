<style>
    .input {
        width: 700px;
        border: solid 2px black;
    }
</style>
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center mt-5">Edit proudcts</h2>
                <form action="/admin/edit-product/{{product._id}}" method="POST">
                    <label for="">Name</label>
                    <input type="text" name="name" value="{{product.name}}" required class="form=control input mb-3">
                    <br>
                    <label for="">Catogory</label>
                    <input type="text" name="category" value="{{product.category}}" required
                        class="form=control input mb-3">
                    <br>
                    <label for="">Discription</label>
                    <input type="text" name="discription" value="{{product.discription}}" required
                        class="form=control input mb-3">
                    <br>
                    <label for="">price</label>
                    <input type="number" name="price" value="{{product.price}}" required
                        class="form=control input mb-3">
                    <br>
                    <label for="">Image (only url)</label>
                    <input type="text" name="image" value="{{product.image}}" class="form=control input mb-3">
                    <br>
                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>